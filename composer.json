{
    "name": "pak/pak-sh",
    "description": "PAK.sh - Universal Package Automation Kit Wrapper",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "pak",
        "package",
        "automation",
        "deployment",
        "npm",
        "pypi",
        "cargo",
        "nuget",
        "packagist",
        "docker",
        "cli",
        "tool",
        "wrapper",
        "package-manager",
        "devops",
        "ci-cd"
    ],
    "authors": [
        {
            "name": "PAK.sh Team",
            "email": "team@pak.sh",
            "homepage": "https://pak.sh"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Pak\\Wrapper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pak\\Wrapper\\Tests\\": "tests/"
        }
    },
    "bin": [
        "pak-sh"
    ],
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "stan": "phpstan analyse",
        "post-install-cmd": [
            "chmod +x pak-sh"
        ],
        "post-update-cmd": [
            "chmod +x pak-sh"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "2.0-dev"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "homepage": "https://pak.sh",
    "support": {
        "issues": "https://github.com/cyber-boost/pak/issues",
        "source": "https://github.com/cyber-boost/pak",
        "docs": "https://pak.sh/docs"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/pak"
        }
    ]
} 