{
    "name": "quay",
    "type": "container",
    "language": "docker",
    "registry": "https://quay.org",
    "api": "https://api.quay.org",
    "health_endpoint": "https://quay.org/health",
    "commands": {
        "publish": "quay publish",
        "info": "quay info {package}",
        "versions": "quay versions {package}",
        "install": "quay install",
        "build": "quay build",
        "test": "quay test"
    },
    "files": {
        "required": ["package.json"],
        "optional": ["README.md", "LICENSE"]
    },
    "authentication": {
        "type": "token",
        "env_var": "QUAY_TOKEN"
    },
    "deployment": {
        "pre_hooks": ["quay install", "quay test", "quay build"],
        "publish_flags": [],
        "rollback_support": false
    }
}
