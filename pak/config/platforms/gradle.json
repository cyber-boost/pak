{
    "name": "gradle",
    "type": "java",
    "language": "java",
    "registry": "https://gradle.org",
    "api": "https://api.gradle.org",
    "health_endpoint": "https://gradle.org/health",
    "commands": {
        "publish": "gradle publish",
        "info": "gradle info {package}",
        "versions": "gradle versions {package}",
        "install": "gradle install",
        "build": "gradle build",
        "test": "gradle test"
    },
    "files": {
        "required": ["package.json"],
        "optional": ["README.md", "LICENSE"]
    },
    "authentication": {
        "type": "token",
        "env_var": "GRADLE_TOKEN"
    },
    "deployment": {
        "pre_hooks": ["gradle install", "gradle test", "gradle build"],
        "publish_flags": [],
        "rollback_support": false
    }
}
