{
    "name": "nuget",
    "type": "dotnet",
    "language": "csharp",
    "registry": "https://nuget.org",
    "api": "https://api.nuget.org",
    "health_endpoint": "https://nuget.org/health",
    "commands": {
        "publish": "nuget publish",
        "info": "nuget info {package}",
        "versions": "nuget versions {package}",
        "install": "nuget install",
        "build": "nuget build",
        "test": "nuget test"
    },
    "files": {
        "required": ["package.json"],
        "optional": ["README.md", "LICENSE"]
    },
    "authentication": {
        "type": "token",
        "env_var": "NUGET_TOKEN"
    },
    "deployment": {
        "pre_hooks": ["nuget install", "nuget test", "nuget build"],
        "publish_flags": [],
        "rollback_support": false
    }
}
