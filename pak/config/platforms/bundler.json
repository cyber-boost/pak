{
    "name": "bundler",
    "type": "ruby",
    "language": "ruby",
    "registry": "https://bundler.org",
    "api": "https://api.bundler.org",
    "health_endpoint": "https://bundler.org/health",
    "commands": {
        "publish": "bundler publish",
        "info": "bundler info {package}",
        "versions": "bundler versions {package}",
        "install": "bundler install",
        "build": "bundler build",
        "test": "bundler test"
    },
    "files": {
        "required": ["package.json"],
        "optional": ["README.md", "LICENSE"]
    },
    "authentication": {
        "type": "token",
        "env_var": "BUNDLER_TOKEN"
    },
    "deployment": {
        "pre_hooks": ["bundler install", "bundler test", "bundler build"],
        "publish_flags": [],
        "rollback_support": false
    }
}
